{% extends "_layouts/base" %}

{% block page %}

	{% set slides = [] %}
	{% set content = craft.entries.section('schedule').type('pnwFunDay').one() %}

	{% if content %}
		{% for block in content.pnwFunDayActivities.all() %}
			{% set slides = slides|merge([block]) %}
		{% endfor %}
	{% endif %}

	{% include '_includes/_blocks/slider' with { 
        slides: slides,
        slideHeader: content.title,
        slideBody: content.description,
        fadeIn: true,
        slideTemplate: '_includes/_blocks/slideCard' 
    } %}


